<div class="container">
  <h1><%= image_tag "bbf.png", class: "avatar-homepage" %></h1>
  <h5>Find all your local dog-friendly places in one spot!</h5>
  <h6>Never leave your furry family member home alone again!</h6>
</div>
  <%# <%= render 'searchbar' %>

<div class="container-icons">
  <div class="icon">
    <i class="fa-solid fa-wine-glass"></i>
    <p>bars</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>beaches</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-person-hiking"></i>
    <p>nature trails</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-tree"></i>
    <p>parks</p>
  </div>
</div>

<div data-controller="map"
    id="map"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-map-markers-value="<%= @markers.to_json %>"
    style="width: 100%; height: 400px;">
</div>

<div class="container">
  <div class="card-trip">
    <% @establishments.each do |establishment| %>
      <div class="card-trip img">
        <img src="<%= establishment.image %>">
      </div>
      <%= link_to establishment_path(establishment) do %>
        <div class="card-product-infos">
          <h2> <%= establishment.name %> </h2>
          <p><em><%= establishment.location_type  %></em></p>
          <p><em><%= "⭐️" * establishment.rating if establishment.rating?  %></em></p>
        </div>
      <% end %>
    <% end %>
    </div>
</div>
