<div class="container">
  <h1><%= @establishment.name %></h1>
  <div class="card img">
    <img src="<%= @establishment.image %>">
  </div>
    <div class="conatiner">
      <p><%= @establishment.address %></p>
      <p></p><%= @establishment.phone %>
      <p><em><%= @establishment.type %></em></p>
      <%# <%= link_to "Favorite", favorite_path(@establishment), method: :establishment %>
      <%# <%= link_to "Unfavorite", unfavorite_path(@establishment), method: :establishment %>
    </div>
  <div>

  </div>
</div>
<div class="container-icons"></div>
    <div class="icon">
      <i class="fa-solid fa-phone"></i>
      <p>Contact</p>
    </div>
    <div class="icon">
      <%= button_to "Return" , root_path, :class => "btn btn-secondary",  :method => :get %>
    </div>
    <div class="icon">
      <i class="fa-solid fa-location-arrow"></i>
      <p>Navigate</p>
    </div>
    <% if policy(@establishment).edit? %>
      <div class="icon">
        <%= button_to "Edit",edit_establishment_path(@establishment), :class => "btn btn-secondary", method: :get
        %>
    </div>
    <% end %>
    <div class="icon">
      <%= link_to "Delete",
          establishment_path(@establishment),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} if policy(@establishment).destroy?
      %>
    </div>
</div>
<%# Reviews %>
<p><%= link_to 'Leave a Review', new_establishment_review_path(@establishment) %></p>
<div class="container">
  <div class="reviews">
    <% if @establishment.reviews.count == 0 %>
      <p>Be the first to leave a review on this list</p>
    <% else %>
      <% @establishment.reviews.each do |review| %>
      <div>
        <p><%= review.user.username %> - <%= review.comments %></p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
